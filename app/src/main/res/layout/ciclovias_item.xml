<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp80">

    <ImageView
        android:id="@+id/iv_ciclovias_icon"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginStart="@dimen/dp10"
        android:src="@drawable/ic_ciclovia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/icono_de_ciclovia" />

    <TextView
        android:id="@+id/tv_comuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_ciclovias_icon"
        app:layout_constraintTop_toTopOf="@id/iv_ciclovias_icon"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_nombre_ciclovia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        app:layout_constraintBottom_toBottomOf="@id/iv_ciclovias_icon"
        app:layout_constraintStart_toEndOf="@id/iv_ciclovias_icon"
        tools:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>